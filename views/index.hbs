
  <div class="module">
    <h1 class="main-title">Playlistr</h1>
  </div>

<div class="column column-12">
  <div class="column column-6">
    <div class="module">
        <h2>Search up to 5 artists (separated by commas), enter how many songs you want (up to 100), and a playlist name.</h2>
        <form class="playlistForm" action="/playlists" method="post">
            <input type="text" name="name" placeholder="Artists (Max 5)" id="artistInput">
            <input type="text" name="name" placeholder="Songs (1-100)" id="songCount">
            <input type="text" name="name" placeholder="Playlist Name" id="listName">
            <br>
            <input type="button" name="name" value="Search" id="makePlaylist">
            <input type='button' id='save' value='Save'></input>
        </form>
      <div class="currentArtist"></div>
    </div>
  </div>

  <div class="column column-6">
      <div class=" rightColumn module">
        <h2>Hear something you like? Enter the artist's name to learn more.</h2>
        <input type="text" name="name" placeholder="Artist Name" class="getArtistInfo">
        <br>
        <input type="button" name="name" value="Get Artist Info" id="makeArtistInfo">
        <div class="artistInfo">
            <section id="bio">
              <div class="biographyTitle accordionTitle"><h1>Biography</h1></div>
              <div class="biography"></div>
            </section>
            <section id="twitter">
              <div class="tweetsTitle accordionTitle"><h1>Twitter</h1></div>
              <div class="tweets" style="display:none"></div>
            </section>
            <section id="instagram">
              <div class="instagramTitle accordionTitle"><h1>Instagram</div>
              <div class="instagram" style="display:none"></div>
            </section>
            <section id="news">
              <div class="newsTitle accordionTitle"><h1>News</h1></div>
              <div class="news" style="display:none"></div>
            </section>
            <section id="concerts">
              <div class="concertsTitle accordionTitle"><h1>Concerts</h1></div>
              <div class="concerts" style="display:none"></div>
            </section>
        </div>
      </div>
  </div>

